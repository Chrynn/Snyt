{block splitter}

<div class="splitter">
    <div class="background-image-wrap">
        <img src="{$basePath}/image/content/background-pub-min.jpg" class="background-image">
    </div>
    <div class="splitter__content">
        <div class="shader-soft content-padding">
            <div class="container-inner">
                <div class="splitter__list-wrap">
                    <ul class="splitter__list">
                        <li class="splitter__list-item">
                            <svg class="splitter__icon-burger">
                                <use xlink:href="{$basePath}/image/icon/general.svg#icon-burger"></use>
                            </svg>
                            <span class="splitter__text">Lorem ipsum dolor sit</span>
                        </li>
                        <li class="splitter__list-item">
                            <svg class="splitter__icon-beer">
                                <use xlink:href="{$basePath}/image/icon/general.svg#icon-beer"></use>
                            </svg>
                            <span class="splitter__text">Lorem ipsum dolor sit</span>
                        </li>
                    </ul>
                    <ul class="splitter__list">
                        <li class="splitter__list-item">
                            <svg class="splitter__icon-dinner">
                                <use xlink:href="{$basePath}/image/icon/general.svg#icon-dinner"></use>
                            </svg>
                            <span class="splitter__text">Lorem ipsum dolor sit</span>
                        </li>
                        <li class="splitter__list-item">
                            <svg class="splitter__icon-fence">
                                <use xlink:href="{$basePath}/image/icon/general.svg#icon-fence"></use>
                            </svg>
                            <span class="splitter__text">Lorem ipsum dolor sit</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
